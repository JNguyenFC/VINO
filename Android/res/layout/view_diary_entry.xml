<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <ImageView
        android:id="@+id/entry_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/vino5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/vintage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8f000000"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:text="2011"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/producer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8f000000"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:text="CARRUTH CELLARS"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/varietal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8f000000"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:text="SAUVIGNON BLANC"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/entry_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bdffffff"
        android:gravity="bottom|center"
        android:paddingBottom="24dp"
        android:text="wine details"
        android:textColor="#dd222222"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:text="entry title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/entry_postDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_title"
        android:layout_centerHorizontal="true"
        android:text="entry postDate"
        android:textColor="#dd222222"
        android:textSize="10sp"
        android:visibility="invisible" />

    <View
        android:id="@+id/line"
        android:layout_width="300dp"
        android:layout_height=".5dp"
        android:layout_below="@+id/entry_postDate"
        android:layout_centerHorizontal="true"
        android:background="#f0000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/entry_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="entry comment"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/deleteEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onMyButtonClick"
        android:src="@drawable/delete_button"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/editText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onMyButtonClick"
        android:src="@drawable/edit_button"
        android:visibility="invisible" />
